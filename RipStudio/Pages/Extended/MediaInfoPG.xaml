<UserControl x:Class="RipStudio.Pages.MediaInfoPG"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}" Margin="16">
        <TextBlock Text="文件地址：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,0,0"/>
        <TextBox VerticalAlignment="Top"  PreviewDragEnter="TextBox_PreviewDragEnter" PreviewDrop="TextBox_PreviewDrop"  Margin="70,0,30,0" PreviewDragOver="TextBox_PreviewDragOver" ToolTip="可以直接拖文件到这里"/>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="..." Padding="8,2"/>
        <TreeView x:Name="MFTV"    BorderThickness="0" Margin="0,30,0,0" />

    </Grid>
</UserControl>
