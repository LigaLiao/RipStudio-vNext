<UserControl x:Class="FirstFloor.ModernUI.App.Pages.Introduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Style="{StaticResource ContentRoot}" Margin="0,8,16,16" >
        <TextBlock Text="Copyright © 2015 LigaLiao. All Rights Reserved." HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <StackPanel >
            <TextBlock Text="RipStudio vNext" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
            <TextBlock Text="{DynamicResource Introduction}" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
        </StackPanel>
        <TextBlock Text="Version: vNext Preview 2"  HorizontalAlignment="Left" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
